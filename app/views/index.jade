extends parts/html

block content
  div
    div
      h1 Tilt Shift
    div.effect-controls.clearfix.well
      div.col-md-5
        | Blur radius:
        input(type="text", class="blur-radius", value="", data-slider-min="1", data-slider-max="5", data-slider-step="1", data-slider-value="1", data-slider-selection="after")
      div.col-md-3
        button(type="submit", class="btn btn-default tilt-shift-button") Tiltshit
        button(type="submit", class="btn btn-default revert-button") Revert
    div.image-container
      div.tilt-overlay
        div.tilt-center
      img.image(src="/images/test_img.jpg")
